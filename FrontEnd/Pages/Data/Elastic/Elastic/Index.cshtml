@page
@model FrontEnd.Pages.Data.Elastic.Elastic.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Elastic[0].ElasticType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Elastic[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Elastic[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Elastic[0].Length)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Elastic) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ElasticType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
