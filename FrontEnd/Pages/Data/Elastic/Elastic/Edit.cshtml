@page
@model FrontEnd.Pages.Data.Elastic.Elastic.EditModel

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Elastic</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Item.ID" />
			<div class="form-group">
				<label asp-for="Item.ElasticTypeID" class="control-label">Type of Elastic</label>
				<select asp-for="Item.ElasticTypeID" class="form-control form-select">
					<option value=""></option>
					@foreach (var elasticType in Model.ElasticTypes)
					{
						<option value="@elasticType.ID">@elasticType.Type</option>
					}
				</select>
				<span asp-validation-for="Item.ElasticTypeID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Item.Color" class="control-label"></label>
				<input asp-for="Item.Color" class="form-control" />
				<span asp-validation-for="Item.Color" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Item.Width" class="control-label"></label>
				<input asp-for="Item.Width" class="form-control" />
				<span asp-validation-for="Item.Width" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Item.Length" class="control-label"></label>
				<input asp-for="Item.Length" class="form-control" />
				<span asp-validation-for="Item.Length" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="hidden" asp-for="Item.ID" />
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
