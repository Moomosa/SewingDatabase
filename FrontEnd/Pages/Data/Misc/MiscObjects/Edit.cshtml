@page
@model FrontEnd.Pages.Data.Misc.MiscObjects.EditModel

@{
	ViewData["Title"] = "Edit a Miscellaneous Item";
}

<partial name="_PageTitle" />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Item.ID" />
			<div class="form-group mt-2">
				<label asp-for="Item.ItemTypeID" class="control-label required-label"></label>
				<select asp-for="Item.ItemTypeID" class="form-control">
					<option value=""></option>
					@foreach (var miscItem in Model.MiscItemTypes)
					{
						<option value="@miscItem.ID">@miscItem.Item</option>
					}
				</select>
				<span asp-validation-for="Item.ItemTypeID" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Item.Quantity" class="control-label required-label"></label>
				<input asp-for="Item.Quantity" class="form-control" />
				<span asp-validation-for="Item.Quantity" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Item.AdditionalNotes" class="control-label"></label>
				<input asp-for="Item.AdditionalNotes" class="form-control" />
				<span asp-validation-for="Item.AdditionalNotes" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Item.Brand" class="control-label"></label>
				<input asp-for="Item.Brand" class="form-control" />
				<span asp-validation-for="Item.Brand" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Item.SpecificInfo" class="control-label"></label>
				<input asp-for="Item.SpecificInfo" class="form-control" />
				<span asp-validation-for="Item.SpecificInfo" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Item.Value" class="control-label"></label>
				<input asp-for="Item.Value" class="form-control" />
				<span asp-validation-for="Item.Value" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Item.PurchasePrice" class="control-label"></label>
				<input asp-for="Item.PurchasePrice" class="form-control" />
				<span asp-validation-for="Item.PurchasePrice" class="text-danger"></span>
			</div>
			<partial name="Edit/_EditBackButtons" model="Model.Item" />
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
