            <div class="form-group">
                <label asp-for="Fabric.Amount" class="control-label"></label>
                <input asp-for="Fabric.Amount" class="form-control" />
                <span asp-validation-for="Fabric.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
