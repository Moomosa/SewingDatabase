<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Fabric.ID" />
            <div class="form-group">
                <label asp-for="Fabric.FabricTypeID" class="control-label"></label>
                <select asp-for="Fabric.FabricTypeID" class="form-control" asp-items="ViewBag.FabricTypeID"></select>
                <span asp-validation-for="Fabric.FabricTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fabric.FabricBrandID" class="control-label"></label>
                <select asp-for="Fabric.FabricBrandID" class="form-control" asp-items="ViewBag.FabricBrandID"></select>
                <span asp-validation-for="Fabric.FabricBrandID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fabric.PurchasePrice" class="control-label"></label>
                <input asp-for="Fabric.PurchasePrice" class="form-control" />
                <span asp-validation-for="Fabric.PurchasePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fabric.Value" class="control-label"></label>
                <input asp-for="Fabric.Value" class="form-control" />
                <span asp-validation-for="Fabric.Value" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Fabric.SolidOrPrint" /> @Html.DisplayNameFor(model => model.Fabric.SolidOrPrint)
