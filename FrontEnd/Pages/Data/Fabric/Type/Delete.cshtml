@page
@model FrontEnd.Pages.Data.Fabric.Type.DeleteModel

@{
	ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@{
	var deleteFailureMessage = TempData["DeleteFailureMessage"] as string;
}

@if (!string.IsNullOrEmpty(deleteFailureMessage))
{
	<div class="alert alert-danger">
		@deleteFailureMessage
	</div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
	@*<h4>FabricTypes</h4>*@
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Item.Type)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Item.Type)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Item.Content)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Item.Content)
		</dd>
	</dl>

	<form method="post">
		<input type="hidden" asp-for="Item.ID" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-page="./Index">Back to List</a>
	</form>
</div>
