@page
@model FrontEnd.Pages.Data.Fabric.Type.CreateModel

@{
	ViewData["Title"] = "Create a New Fabric Type";
}

<partial name="_PageTitle" />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group mt-2">
				<label asp-for="Item.Type" class="control-label required-label"></label>
				<input asp-for="Item.Type" class="form-control" maxlength="25" autofocus required />
				<span asp-validation-for="Item.Type" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Item.Content" class="control-label"></label>
				<input asp-for="Item.Content" class="form-control" maxlength="50" />
				<span asp-validation-for="Item.Content" class="text-danger"></span>
			</div>
			<partial name="Create/_CreateBackButtons" />
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
