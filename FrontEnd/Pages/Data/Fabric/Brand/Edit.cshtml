@page
@model FrontEnd.Pages.Data.Fabric.Brand.EditModel

@{
    ViewData["Title"] = "Edit a Fabric Brand";
}

<partial name="_PageTitle" />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.ID" />
            <div class="form-group mt-2">
                <label asp-for="Item.FullName" class="control-label required-label"></label>
                <input asp-for="Item.FullName" class="form-control" />
                <span asp-validation-for="Item.FullName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Item.Website" class="control-label"></label>
                <input asp-for="Item.Website" class="form-control" />
                <span asp-validation-for="Item.Website" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Item.AdditionalInfo" class="control-label"></label>
                <input asp-for="Item.AdditionalInfo" class="form-control" />
                <span asp-validation-for="Item.AdditionalInfo" class="text-danger"></span>
            </div>
            <partial name="Edit/_EditBackButtons" model="Model.Item" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
