@page
@model FrontEnd.Pages.Data.Fabric.Brand.CreateModel

@{
	ViewData["Title"] = "Create a Fabric Brand";
}

<div class="row">
	<partial name="_PageTitle" />
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group mt-2">
				<label asp-for="Item.FullName" class="control-label required-label">Brand Name</label>
				<input asp-for="Item.FullName" class="form-control" maxlength="50" autofocus />
				<span asp-validation-for="Item.FullName" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Item.Website" class="control-label"></label>
				<input asp-for="Item.Website" class="form-control" maxlength="50" />
				<span asp-validation-for="Item.Website" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Item.AdditionalInfo" class="control-label">Additional Info</label>
				<input asp-for="Item.AdditionalInfo" class="form-control" maxlength="60" />
				<span asp-validation-for="Item.AdditionalInfo" class="text-danger"></span>
			</div>
			<partial name="Create/_CreateBackButtons" />
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
