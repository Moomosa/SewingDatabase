@page
@model FrontEnd.Pages.Data.Thread.Type.CreateModel

@{
    ViewData["Title"] = "Create a New Thread Type";
}

<partial name="_PageTitle" />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Item.Name" class="control-label required-label"></label>
                <input asp-for="Item.Name" class="form-control" maxlength="25" autofocus/>
                <span asp-validation-for="Item.Name" class="text-danger"></span>
            </div>
            <partial name="Create/_CreateBackButtons" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
