@page
@model FrontEnd.Pages.Data.Thread.Thread.CreateModel

@{
    ViewData["Title"] = "Create a New Thread";
}

<partial name="_PageTitle" />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Item.ThreadTypeID" class="control-label required-label">Thread Type</label>
                <select asp-for="Item.ThreadTypeID" class ="form-control form-select" >
                    <option value=""></option>
                    @foreach(var threadType in Model.ThreadTypes)
                    {
                        <option value="@threadType.ID">@threadType.Name</option>
                    }
                </select>
                <span asp-validation-for="Item.ThreadTypeID" class="text-danger"></span>
                @if (Model.ThreadTypes.Count == 0)
                {
                    <p class="text-danger m-lg-2">You haven't created any Thread Types yet. Click <a asp-page="../Type/Create">here</a> to create one.</p>
                }
            </div>

            <div class="form-group mt-2">
                <label asp-for="Item.ColorID" class="control-label required-label">Color</label>
                <select asp-for="Item.ColorID" class ="form-control form-select" >
                    <option value=""></option>
                    @foreach(var threadColor in Model.ThreadColors)
                    {
                        <option value="@threadColor.ID">@threadColor.Color</option>
                    }
                </select>
                <span asp-validation-for="Item.ColorID" class="text-danger"></span>
                @if (Model.ThreadColors.Count == 0)
                {
                    <p class="text-danger m-lg-2">You haven't created any Thread Colors yet. Click <a asp-page="../Color/Create">here</a> to create one.</p>
                }
            </div>

            <div class="form-group mt-2">
                <label asp-for="Item.Quantity" class="control-label required-label"></label>
                <input asp-for="Item.Quantity" class="form-control" type="number" step="1" min="0" max="999"/>
                <span asp-validation-for="Item.Quantity" class="text-danger"></span>
            </div>
            <partial name="Create/_CreateBackButtons" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
