@page
@model FrontEnd.Pages.Data.Thread.Thread.EditModel

@{
	ViewData["Title"] = "Edit a Thread";
}

<partial name="_PageTitle" />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Item.ID" />
			<div class="form-group mt-2">
				<label asp-for="Item.ThreadTypeID" class="control-label required-label"></label>
				<select asp-for="Item.ThreadTypeID" class="form-control form-select">
					<option value=""></option>
					@foreach (var threadType in Model.ThreadTypes)
					{
						<option value="@threadType.ID">@threadType.Name</option>
					}
				</select>
				<span asp-validation-for="Item.ThreadTypeID" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Item.ColorID" class="control-label required-label"></label>
				<select asp-for="Item.ColorID" class="form-control form-select">
					<option value=""></option>
					@foreach (var threadColor in Model.ThreadColors)
					{
						<option value="@threadColor.ID">@threadColor.Color</option>
					}
				</select>
				<span asp-validation-for="Item.ColorID" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Item.Quantity" class="control-label required-label"></label>
				<input asp-for="Item.Quantity" class="form-control" />
				<span asp-validation-for="Item.Quantity" class="text-danger"></span>
			</div>
			<partial name="Edit/_EditBackButtons" model="Model.Item" />
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
