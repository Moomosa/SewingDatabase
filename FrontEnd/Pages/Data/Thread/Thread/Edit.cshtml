@page
@model FrontEnd.Pages.Data.Thread.Thread.EditModel

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Thread</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Item.ID" />
			<div class="form-group">
				<label asp-for="Item.ThreadTypeID" class="control-label"></label>
				<select asp-for="Item.ThreadTypeID" class="form-control form-select">
					<option value=""></option>
					@foreach (var threadType in Model.ThreadTypes)
					{
						<option value="@threadType.ID">@threadType.Name</option>
					}
				</select>
				<span asp-validation-for="Item.ThreadTypeID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Item.ColorID" class="control-label"></label>
				<select asp-for="Item.ColorID" class="form-control form-select">
					<option value=""></option>
					@foreach (var threadColor in Model.ThreadColors)
					{
						<option value="@threadColor.ID">@threadColor.Color</option>
					}
				</select>
				<span asp-validation-for="Item.ColorID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Item.Quantity" class="control-label"></label>
				<input asp-for="Item.Quantity" class="form-control" />
				<span asp-validation-for="Item.Quantity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="hidden" asp-for="Item.ID" />
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
