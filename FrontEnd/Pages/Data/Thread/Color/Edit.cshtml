@page
@model FrontEnd.Pages.Data.Thread.Color.EditModel

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ThreadColor</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ThreadColor.ID" />
			<div class="form-group">
				<label asp-for="ThreadColor.Color" class="control-label"></label>
				<input asp-for="ThreadColor.Color" class="form-control" />
				<span asp-validation-for="ThreadColor.Color" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ThreadColor.ColorFamilyID" class="control-label"></label>
				<select asp-for="ThreadColor.ColorFamilyID" class="form-control form-select">
					<option value=""></option>
					@foreach (var colorFamily in Model.ThreadColorFamily)
					{
						<option value="@colorFamily.ID">@colorFamily.ColorFamily</option>
					}
				</select>
				<span asp-validation-for="ThreadColor.ColorFamilyID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
