@page
@model FrontEnd.Pages.Data.Thread.Color.EditModel

@{
	ViewData["Title"] = "Edit a Thread Color";
}

<partial name="_PageTitle" />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Item.ID" />
			<div class="form-group mt-2">
				<label asp-for="Item.Color" class="control-label required-label"></label>
				<input asp-for="Item.Color" class="form-control" />
				<span asp-validation-for="Item.Color" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Item.ColorFamilyID" class="control-label required-label"></label>
				<select asp-for="Item.ColorFamilyID" class="form-control form-select">
					<option value=""></option>
					@foreach (var colorFamily in Model.ThreadColorFamily)
					{
						<option value="@colorFamily.ID">@colorFamily.ColorFamily</option>
					}
				</select>
				<span asp-validation-for="Item.ColorFamilyID" class="text-danger"></span>
			</div>
			<partial name="Edit/_EditBackButtons" model="Model.Item" />
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
