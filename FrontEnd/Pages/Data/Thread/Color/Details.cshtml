@page
@model FrontEnd.Pages.Data.Thread.Color.DetailsModel

@{
	ViewData["Title"] = "Thread Color Details";
}

<partial name="_PageTitle" />
<div class="container mt-4">
	<div class="card mt-4">
		<div class="card-body">
			<dl class="row">

				<dt class="col-sm-3">Thread Color</dt>
				<dd class="col-sm-9">@Model.Item.Color</dd>

				<dt class="col-sm-3">Thread Color Family</dt>
				<dd class="col-sm-9">
					<a href="@Url.Page("../Family/Details", new { id = Model.Item.ColorFamily.ID })" class="subtle-link">@Model.Item.ColorFamily.ColorFamily</a>
				</dd>

			</dl>
		</div>
	</div>
	<partial name="Details/_ToEditBackButtons" />
</div>
