@if (Model.TotalPages > 1)
{
	<div>
		<ul class="pagination">
			<li class="page-item @(!Model.ShowPrevious? "disabled" : "")">
				<a asp-page="./Index" asp-route-currentpage="1" asp-route-sort="@Model.Sort" asp-route-sortDirection="@Model.SortDirection" class="page-link">
					<i class="fa-solid fa-angles-left fa-lg @(!Model.ShowPrevious ? "text-muted" : "")"></i>
				</a>
			</li>
			<li class="page-item @(!Model.ShowPrevious? "disabled" : "")">
				<a asp-page="./Index" asp-route-currentpage="@(Model.CurrentPage -1)" asp-route-sort="@Model.Sort" asp-route-sortDirection="@Model.SortDirection" class="page-link">
					<i class="fa-solid fa-chevron-left fa-lg @(!Model.ShowPrevious ? "text-muted" : "")"></i>
				</a>
			</li>
			@for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
			{
				<li class="page-item @(i == Model.CurrentPage ? "active" : "")">
					<a asp-page="./Index" asp-route-currentpage="@i" asp-route-sort="@Model.Sort" asp-route-sortDirection="@Model.SortDirection" class="page-link">@i</a>
				</li>
			}
			<li class="page-item @(!Model.ShowNext? "disabled" : "")">
				<a asp-page="./Index" asp-route-currentpage="@(Model.CurrentPage + 1)" asp-route-sort="@Model.Sort" asp-route-sortDirection="@Model.SortDirection" class="page-link">
					<i class="fa-solid fa-chevron-right fa-lg @(!Model.ShowNext ? "text-muted" : "")"></i>
				</a>
			</li>
			<li class="page-item @(!Model.ShowNext? "disabled" : "")">
				<a asp-page="./Index" asp-route-currentpage="@Model.TotalPages" asp-route-sort="@Model.Sort" asp-route-sortDirection="@Model.SortDirection" class="page-link">
					<i class="fa-solid fa-angles-right fa-lg @(!Model.ShowNext ? "text-muted" : "")"></i>
				</a>
			</li>
		</ul>
	</div>
}
